<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefWidth="1100.0" spacing="7.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.AppointmentsFormController">
    <children>
        <Label text="Appointments" underline="true">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="33.0">
            <children>
                <RadioButton fx:id="aRAllRadio" mnemonicParsing="false" onAction="#onActionAllRadio" selected="true"
                             text="All">
                    <toggleGroup>
                        <ToggleGroup fx:id="appViewToggle"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="aRMonthlyRadio" mnemonicParsing="false" onAction="#onActionMonthlyRadio"
                             text="Monthly" toggleGroup="$appViewToggle"/>
                <RadioButton fx:id="aRWeeklyRadio" mnemonicParsing="false" onAction="#onActionWeeklyRadio" text="Weekly"
                             toggleGroup="$appViewToggle"/>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets bottom="15.0" top="15.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER" spacing="11.0">
            <children>
                <Button fx:id="aRBackButton" alignment="CENTER" mnemonicParsing="false" onAction="#onActionBackButton"
                        text="&lt;" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Button>
                <Label fx:id="aRMonthWeekLabel" text="Month">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Button fx:id="aRForwardButton" alignment="CENTER" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                        onAction="#onActionForwardButton" text="&gt;" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="15.0"/>
            </padding>
        </HBox>
        <TableView fx:id="aRTableView">
            <columns>
                <TableColumn fx:id="aRStartDateTimeColumn" prefWidth="75.0" text="Start DateTime"/>
                <TableColumn fx:id="aREndDateTimeColumn" prefWidth="75.0" text="End DateTime"/>
                <TableColumn fx:id="aRIDColumn" prefWidth="104.0" text="ID"/>
                <TableColumn fx:id="aRTitleColumn" prefWidth="52.0" text="Title"/>
                <TableColumn fx:id="aRDescriptionColumn" prefWidth="75.0" text="Description"/>
                <TableColumn fx:id="aRLocationColumn" prefWidth="75.0" text="Location"/>
                <TableColumn fx:id="aRContactColumn" prefWidth="75.0" text="Contact"/>
                <TableColumn fx:id="aRTypeColumn" prefWidth="75.0" text="Type"/>
                <TableColumn fx:id="aRCusIDColumn" prefWidth="75.0" text="Customer ID"/>
                <TableColumn fx:id="aRUserIDColumn" prefWidth="75.0" text="User ID"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <padding>
                <Insets bottom="7.0"/>
            </padding>
        </TableView>
        <HBox alignment="CENTER" spacing="33.0">
            <children>
                <Button fx:id="appAddButton" mnemonicParsing="false" onAction="#onActionAppAddButton" text="Add"/>
                <Button fx:id="appUpdateButton" mnemonicParsing="false" onAction="#onActionAppUpdateButton"
                        text="Update"/>
                <Button fx:id="appDeleteButton" mnemonicParsing="false" onAction="#onActionAppDeleteButton"
                        text="Delete"/>
                <Button fx:id="appointmentsFormBackButton" mnemonicParsing="false"
                        onAction="#onActionAppointmentsFormBackButton" text="Back"/>
            </children>
            <padding>
                <Insets right="13.0"/>
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="7.0"/>
    </padding>
</VBox>
