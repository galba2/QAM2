<VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="7.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddAppointmentController">
   <children>
      <Pane>
         <children>
            <Label fx:id="appointmentTitleLabel" text="Add Appointment" underline="true">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <padding>
                  <Insets left="7.0" />
               </padding>
            </Label>
         </children>
      </Pane>
      <GridPane alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="250.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="186.0" minWidth="10.0" prefWidth="77.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="173.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="28.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="148.0" minHeight="0.0" prefHeight="35.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="183.0" minHeight="10.0" prefHeight="37.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="160.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="222.0" minHeight="10.0" prefHeight="34.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="222.0" minHeight="10.0" prefHeight="34.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="CENTER_RIGHT" text="ID" />
            <Label text="Title" GridPane.rowIndex="1" />
            <Label text="Description" GridPane.rowIndex="2" />
            <Label text="Location" GridPane.rowIndex="3" />
            <Label text="Customer ID" GridPane.rowIndex="4" />
            <TextField fx:id="idTextfield" editable="false" GridPane.columnIndex="1" />
            <TextField fx:id="titleTextfield" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="descriptionTextfield" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="locationTextfield" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="customerIDTextfield" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="User ID" GridPane.rowIndex="5" />
            <TextField fx:id="userIDTextfield" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
      </GridPane>
      <HBox alignment="CENTER">
         <children>
            <ComboBox fx:id="typeComboBox" prefWidth="150.0" promptText="Type" />
         </children>
         <padding>
            <Insets top="13.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <ComboBox fx:id="contactComboBox" prefWidth="150.0" promptText="Contact" />
         </children>
         <padding>
            <Insets bottom="13.0" top="13.0" />
         </padding>
      </HBox>
      <GridPane alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="250.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="186.0" minWidth="10.0" prefWidth="91.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="159.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="28.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="148.0" minHeight="0.0" prefHeight="35.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="183.0" minHeight="10.0" prefHeight="37.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="160.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label alignment="CENTER_RIGHT" text="Start" />
            <ComboBox fx:id="startMonthComboBox" prefWidth="150.0" promptText="Month" GridPane.columnIndex="1" />
            <ComboBox fx:id="startDayComboBox" layoutX="101.0" layoutY="12.0" prefWidth="150.0" promptText="Day" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="startYearComboBox" layoutX="101.0" layoutY="43.0" prefWidth="150.0" promptText="Year" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="3.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <ComboBox fx:id="startHourComboBox" prefWidth="150.0" promptText="Hour" />
                  <ComboBox fx:id="startMinuteComboBox" prefWidth="150.0" promptText="Minute" />
               </children>
            </HBox>
         </children>
      </GridPane>
      <GridPane alignment="CENTER_LEFT" layoutX="35.0" layoutY="318.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="250.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="186.0" minWidth="10.0" prefWidth="91.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="159.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="28.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="148.0" minHeight="0.0" prefHeight="35.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="183.0" minHeight="10.0" prefHeight="37.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="160.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label alignment="CENTER_RIGHT" text="End" />
            <ComboBox fx:id="endMonthComboBox" prefWidth="150.0" promptText="Month" GridPane.columnIndex="1" />
            <ComboBox fx:id="endDayComboBox" layoutX="101.0" layoutY="12.0" prefWidth="150.0" promptText="Day" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="endYearComboBox" layoutX="101.0" layoutY="43.0" prefWidth="150.0" promptText="Year" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="3.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <ComboBox fx:id="endHourComboBox" prefWidth="150.0" promptText="Hour" />
                  <ComboBox fx:id="endMinuteComboBox" prefWidth="150.0" promptText="Minute" />
               </children>
            </HBox>
         </children>
      </GridPane>
      <HBox alignment="CENTER_RIGHT" spacing="23.0">
         <children>
            <Button fx:id="appointmentSaveButton" mnemonicParsing="false" onAction="#onActionAppSave" text="Save" />
            <Button fx:id="appointmentCancelButton" mnemonicParsing="false" onAction="#onActionAppCancel" text="Cancel" />
         </children>
         <padding>
            <Insets bottom="3.0" right="5.0" top="7.0" />
         </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </children>
</VBox>
