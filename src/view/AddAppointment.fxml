<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="7.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddAppointmentController">
    <children>
        <Pane>
            <children>
                <Label fx:id="appointmentTitleLabel" text="Add Appointment" underline="true">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <padding>
                        <Insets left="7.0"/>
                    </padding>
                </Label>
            </children>
        </Pane>
        <GridPane alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                  minWidth="-Infinity" prefWidth="250.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="186.0" minWidth="10.0" prefWidth="77.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="173.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="28.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="148.0" minHeight="0.0" prefHeight="35.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="183.0" minHeight="10.0" prefHeight="37.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="160.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER_RIGHT" text="ID"/>
                <Label text="Title" GridPane.rowIndex="1"/>
                <Label text="Description" GridPane.rowIndex="2"/>
                <Label text="Location" GridPane.rowIndex="3"/>
                <TextField fx:id="idTextfield" editable="false" GridPane.columnIndex="1"/>
                <TextField fx:id="titleTextfield" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="descriptionTextfield" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextField fx:id="locationTextfield" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="25.0">
            <children>
                <GridPane alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                          minWidth="-Infinity" prefWidth="250.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="186.0" minWidth="10.0" prefWidth="91.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="159.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="28.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <ComboBox fx:id="typeComboBox" prefWidth="150.0" GridPane.columnIndex="1"/>
                        <Label text="Type"/>
                        <ComboBox fx:id="contactComboBox" prefWidth="150.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1"/>
                        <Label text="Contact" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="customerIDComboBox" prefWidth="150.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="2"/>
                        <Label text="Customer ID" GridPane.rowIndex="2"/>
                    </children>
                </GridPane>
            </children>
            <padding>
                <Insets top="13.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="277.0">
            <padding>
                <Insets bottom="13.0" top="13.0"/>
            </padding>
            <children>
                <DatePicker fx:id="datePicker" onAction="#onActionDatePicker" promptText="DAY"/>
            </children>
        </HBox>
        <GridPane alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                  minWidth="-Infinity" prefWidth="250.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="186.0" minWidth="10.0" prefWidth="91.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="159.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="28.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="116.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="148.0" minHeight="0.0" prefHeight="35.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="148.0" minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="148.0" minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER_RIGHT" text="Start" GridPane.columnIndex="1"/>
                <Label alignment="CENTER_RIGHT" text="End" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <ComboBox fx:id="startHourComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <ComboBox fx:id="startMinuteComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <ComboBox fx:id="endHourComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <ComboBox fx:id="endMinuteComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <Label alignment="CENTER_RIGHT" text="Hour" GridPane.rowIndex="1"/>
                <Label alignment="CENTER_RIGHT" layoutX="10.0" layoutY="45.0" text="Minute" GridPane.rowIndex="2"/>
                <Label alignment="CENTER_RIGHT" layoutX="10.0" layoutY="45.0" text="Hour" GridPane.rowIndex="5"/>
                <Label alignment="CENTER_RIGHT" layoutX="10.0" layoutY="142.0" text="Minute" GridPane.rowIndex="6"/>
            </children>
        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="23.0">
            <children>
                <Button fx:id="appointmentSaveButton" mnemonicParsing="false" onAction="#onActionAppSave" text="Save"/>
                <Button fx:id="appointmentCancelButton" mnemonicParsing="false" onAction="#onActionAppCancel"
                        text="Cancel"/>
            </children>
            <padding>
                <Insets bottom="3.0" right="5.0" top="7.0"/>
            </padding>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </HBox>
    </children>
</VBox>
